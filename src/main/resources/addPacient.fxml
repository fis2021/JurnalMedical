                <Font name="Times New Roman Italic" size="15.0" />
            </font>
            <effect>
                <DropShadow height="48.92" radius="25.072499999999998" spread="0.56" width="53.37">
                    <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <Button blendMode="SCREEN" defaultButton="true" layoutX="33.0" layoutY="400.0" onAction="#handleCancelMButtonAction" style="-fx-border-radius: 5em; -fx-background-radius: 5em;" text="Cancel">
