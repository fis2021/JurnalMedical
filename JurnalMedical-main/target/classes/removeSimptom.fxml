<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10" prefWidth="600" prefHeight="400"
          xmlns="http://javafx.com/javafx/8.0.172-ea"
          fx:controller="org.loose.fis.sre.controllers.RemoveSimptomController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Eliminati un simptom!" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

    <Label text="Simptom:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="simptomField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#handleRemoveSimptomButtonAction" text="Remove simptom"/>
    </HBox>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="35">
        <Button onAction="#handleCancelButtonAction" text="Cancel"/>
    </HBox>
    <Text fx:id="simptomMessage" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>